{
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["ESNext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "composite": true,
    "declaration": true,
    "strict": true,
    "alwaysStrict": false,
    "esModuleInterop": true,
    "noImplicitUseStrict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "baseUrl": "./",
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src", "src/schema.json"]
}
